                var mensaje = ex.ToString();
                return false;
            }
        }

        public string devolverfechaformateada(string fecha)
        {
            if(fecha == "")
            {
                return "";
            }


            var mes = fecha.Substring(0, 3);
            var dia = fecha.Substring(4, 2);
            var anio = fecha.Substring(8, 4);

            var fechaconformato = "";
            try
            {
                if(mes == "Ene")
                {
                    mes = "01";
                }
                else if(mes == "Feb")
                {
                    mes = "02";
                }
                else if(mes == "Mar")
                {
                    mes = "03";
                }
                else if (mes == "Abr")
                {
                    mes = "04";
                }
                else if (mes == "May")
                {
                    mes = "05";
                }
                else if (mes == "Jun")
                {
                    mes = "06";
                }
                else if (mes == "Jul")
                {
                    mes = "07";
                }
                else if (mes == "Ago")
                {
                    mes = "08";
                }
                else if (mes == "Sep")
                {
                    mes = "09";
                }
                else if (mes == "Oct")
                {
                    mes = "10";
                }
                else if (mes == "Nov")
                {
                    mes = "11";
                }
                else if (mes == "Dic")
                {
                    mes = "12";
                }

                fechaconformato = dia + "/" + mes + "/" + anio;

                return fechaconformato;
            }
            catch (Exception ex)
            {
                return ex.ToString();
            }
        }

        public string devolverhoraformateada(string horadispuesta)
        {
            if(horadispuesta == "")
            {
                return "";
            }

            var formatodia = horadispuesta.Substring(6, 2);
            var hr = horadispuesta.Substring(0, 2);
            var min = horadispuesta.Substring(2, 3) + " 00:00:00";
            var hora = 0;
            var horamarcada = "";

            try
            {
                if (formatodia == "PM")
                {
                    if (hr != "12")
                    {
                        hora = Convert.ToInt32(hr) + 12;
                    }
                    else
                    {
                        hora = 0;
                    }

                    if (hora != 0)
                    {
                        horamarcada = hora + min;
                    }
                    else
                    {
                        horamarcada = "0" + hora + min;
                    }
                }
                else
                {
                    horamarcada = hr + min;
                }

                return horamarcada;
            }
            catch (Exception ex)
            {
                return ex.ToString();
            }

        }
